            "update": {
              "stroke": {"scale": "color", "field": "c"},
              "x": {"scale": "x", "field": "x"},
              "y": {"scale": "y", "field": "y"},
              "defined": {
                "signal": "datum[\"x\"] !== null && !isNaN(datum[\"x\"]) && datum[\"y\"] !== null && !isNaN(datum[\"y\"])"
              }
            }
          }
        }
      ]
    }
  ],
  "scales": [
